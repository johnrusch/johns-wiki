---
import { Image } from "astro:assets";
import logoImage from "../images/logoImage.webp";
import Navigation from "./Navigation.astro";
import Hamburger from "./Hamburger.astro";
import horizontalLine from "../images/horizontalLine.webp";
---

<header id="header">
  <div class="header-container">
    <a href="/">
      <Image src={logoImage} alt="john's wiki logo" id="logo-image" />
    </a>
    <Hamburger />
  </div>
  <nav id="nav-element">
    <Navigation />
  </nav>
</header>
<!-- <Image id="header-border-bottom" class="horizontal-line" src={horizontalLine} alt="horizontal line" /> -->

<style>
  #header {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.5rem;
    padding-bottom: 0;
  }
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  #nav-element {
    display: flex;
    width: 100%;
  }

  #logo-image {
    width: 75%;
    height: auto;
  }

  #logo-image:hover {
    cursor: pointer;
  }

  #header-border-bottom {
    height: 1.5rem;
  }

  @media (min-width: 1051px) {
    #header {
      flex-direction: row;
      justify-content: space-between;
      padding: 1.5rem;
      padding-bottom: 0;
    }
    #logo-image {
      width: 25rem;
    }

    #header-border-bottom {
      height: 2rem;
    }
  }
</style>
