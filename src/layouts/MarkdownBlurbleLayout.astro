---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
  <main id="blog-container">
    <p>Written by {frontmatter.author}</p>
    <slot />
  </main>
</BaseLayout>


<style>
    #blog-container {
        padding: 1rem;
        margin: 1rem 0;
    }
</style>
